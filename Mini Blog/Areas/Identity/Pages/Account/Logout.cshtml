@page
@model LogoutModel
@{
    ViewData["Title"] = "Logged out";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow-lg border-0 text-center p-4" style="max-width: 420px; width: 100%;">

        <div class="mb-3">
            <span class="fs-1">👋</span>
        </div>

        <h3 class="fw-bold mb-2">You’re logged out</h3>

        <p class="text-muted mb-4">
            You have successfully logged out of <strong>MiniBlog</strong>.
        </p>

        <div class="d-flex justify-content-center gap-2">
            <a asp-page="/Account/Login"
               class="btn btn-primary px-4">
                Log in again
            </a>

            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-outline-secondary px-4">
                Go to Home
            </a>
        </div>

    </div>
</div>
