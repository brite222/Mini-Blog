@model IEnumerable<MiniBlog.Models.BlogPost>

<h1 class="text-center mb-4">MiniBlog</h1>

<!-- FILTER FORM -->
<form method="get" asp-action="Index" class="row g-2 mb-4 justify-content-center">

    <!-- SEARCH -->
    <div class="col-md-4">
        <input type="text"
               name="search"
               value="@ViewBag.Search"
               class="form-control"
               placeholder="Search posts..." />
    </div>

    <!-- CATEGORY -->
    <div class="col-md-3">
        <select name="categoryId" class="form-select">
            <option value="">All Categories</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.Id"
                        selected="@(ViewBag.CategoryId == cat.Id)">
                    @cat.Name
                </option>
            }
        </select>
    </div>

    <!-- TAG -->
    <div class="col-md-3">
        <select name="tagId" class="form-select">
            <option value="">All Tags</option>
            @foreach (var tag in ViewBag.Tags)
            {
                <option value="@tag.Id"
                        selected="@(ViewBag.TagId == tag.Id)">
                    @tag.Name
                </option>
            }
        </select>
    </div>

    <!-- BUTTON -->
    <div class="col-md-2">
        <button class="btn btn-primary w-100">
            Filter
        </button>
    </div>
</form>

<!-- POSTS -->
<div class="row">
    @if (!Model.Any())
    {
        <div class="col-12 text-center text-muted">
            No posts found.
        </div>
    }

    @foreach (var post in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">

                @if (!string.IsNullOrEmpty(post.ImageUrl))
                {
                    <img src="@post.ImageUrl"
                         class="card-img-top"
                         alt="Post image" />
                }

            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@post.Title</h5>

                <small class="text-muted mb-2">
                    @post.CreatedAt.ToString("MMMM dd, yyyy")
                </small>

                <p class="card-text">
                    @(post.Content.Length > 120
                                        ? post.Content.Substring(0, 120) + "..."
                                        : post.Content)
                </p>

                    <a asp-controller="BlogPosts"
                       asp-action="Details"
                       asp-route-id="@post.Id"
                       class="btn btn-outline-primary mt-auto">
                        Read More →
                    </a>
                </div>
            </div>
        </div>
        }
</div>

<!-- PAGINATION -->
@if (ViewBag.TotalPages > 1)
{
    <nav class="d-flex justify-content-center mt-4">
        <ul class="pagination">

            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-search="@ViewBag.Search"
                   asp-route-categoryId="@ViewBag.CategoryId"
                   asp-route-tagId="@ViewBag.TagId"
                   asp-route-page="@(ViewBag.CurrentPage - 1)">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-search="@ViewBag.Search"
                       asp-route-categoryId="@ViewBag.CategoryId"
                       asp-route-tagId="@ViewBag.TagId"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-search="@ViewBag.Search"
                   asp-route-categoryId="@ViewBag.CategoryId"
                   asp-route-tagId="@ViewBag.TagId"
                   asp-route-page="@(ViewBag.CurrentPage + 1)">
                    Next
                </a>
            </li>

        </ul>
    </nav>
}
