@model MiniBlog.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-sm btn-outline-primary me-2">
                Edit
            </a>

            <a asp-action="Delete"
               asp-route-id="@Model.Id"
               class="btn btn-sm btn-outline-danger">
                Delete
            </a>
        </div>
    }

    <!-- POST CARD -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl"
                     class="img-fluid rounded mb-4"
                     alt="Post image" />
            }

            <h1 class="card-title">@Model.Title</h1>

            <p class="text-muted mb-2">
                📅 @Model.CreatedAt.ToString("MMMM dd, yyyy")
            </p>

            <div class="fs-5 mb-3">
                @Model.Content
            </div>

            @if (Model.Category != null)
            {
                <span class="badge bg-primary me-2">
                    @Model.Category.Name
                </span>
            }

            @if (Model.BlogPostTags.Any())
            {
                foreach (var tag in Model.BlogPostTags)
                {
                    <span class="badge bg-secondary me-1">
                        #@tag.Tag.Name
                    </span>
                }
            }

        </div>
    </div>

    <!-- LIKES -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex align-items-center justify-content-between">
            <h5 class="mb-0">❤️ Likes: @ViewBag.TotalLikes</h5>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Likes"
                      asp-action="Like"
                      method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="blogPostId" value="@Model.Id" />
                    <button class="btn btn-outline-danger">
                        ❤️ Like / Unlike
                    </button>
                </form>
            }
            else
            {
                <a asp-area="Identity"
                   asp-page="/Account/Login"
                   class="btn btn-outline-secondary">
                    Login to like
                </a>
            }
        </div>
    </div>

    <!-- COMMENTS -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="mb-3">💬 Comments (@Model.Comments.Count)</h4>

            @if (Model.Comments.Any())
            {
                foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                {
                    <div class="border rounded p-3 mb-3">
                        <strong>@comment.AuthorName</strong>
                        <small class="text-muted ms-2">
                            @comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                        </small>

                        <p class="mt-2 mb-1">@comment.Content</p>

                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-controller="Comments"
                                  asp-action="Delete"
                                  method="post"
                                  class="mt-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@comment.Id" />
                                <input type="hidden" name="blogPostId" value="@Model.Id" />
                                <button class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        }
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No comments yet. Be the first!</p>
            }

            <!-- ADD COMMENT -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Comments"
                      asp-action="Create"
                      method="post"
                      class="mt-4">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="BlogPostId" value="@Model.Id" />

                    <textarea name="Content"
                          class="form-control mb-2"
                          rows="3"
                          placeholder="Write a comment..."
                          required></textarea>

                    <button class="btn btn-primary">
                        Add Comment
                    </button>
                </form>
            }
            else
            {
                <p class="mt-3">
                    <a asp-area="Identity" asp-page="/Account/Login">
                        Login
                    </a> to add a comment.
                </p>
            }
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary">
        ← Back to Posts
    </a>

</div>
