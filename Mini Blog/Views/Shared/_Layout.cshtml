<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniBlog</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
                📝 MiniBlog
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="BlogPosts" asp-action="Index">Blog</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-danger"
                               asp-controller="Admin"
                               asp-action="Dashboard">
                                Admin
                            </a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <a href="https://instagram.com/yourusername" target="_blank"><i class="fab fa-instagram text-danger"></i></a>
                    <a href="https://wa.me/2348012345678" target="_blank"><i class="fab fa-whatsapp text-success"></i></a>
                    <a href="https://x.com/yourusername" target="_blank"><i class="fab fa-x-twitter text-dark"></i></a>
                    <a href="https://tiktok.com/yourusername" target="_blank"><i class="fab fa-tiktok text-dark"></i></a>

                    <partial name="_LoginPartial" />

                    <button id="themeToggle" class="btn btn-sm btn-outline-secondary">🌙</button>
                </div>

            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="border-top mt-5 py-3 text-muted">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - MiniBlog
        </div>
    </footer>

    <!-- LOGIN AD MODAL -->
    @if (Context.Session.GetString("ShowLoginAd") == "true")
    {
        <div class="modal fade" id="loginAdModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">🔥 Sponsored</h5>
                        <button type="button" class="btn-close"
                                data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body text-center">
                        <img src="/ads/ad1.jpg"
                             class="img-fluid mb-3"
                             alt="Ad">

                        <p class="fw-semibold">
                            Grow your business with MiniBlog 🚀
                        </p>

                        <a href="https://wa.me/2348012345678"
                           target="_blank"
                           class="btn btn-success">
                            Contact on WhatsApp
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                new bootstrap.Modal(
                    document.getElementById("loginAdModal")
                ).show();
            });
        </script>

        Context.Session.Remove("ShowLoginAd");
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const toggle = document.getElementById("themeToggle");
        if (localStorage.getItem("theme") === "dark") {
            document.body.classList.add("dark-mode");
            toggle.textContent = "☀️";
        }

        toggle?.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            toggle.textContent = document.body.classList.contains("dark-mode") ? "☀️" : "🌙";
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
