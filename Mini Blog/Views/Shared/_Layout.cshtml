<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniBlog</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand fw-bold fs-4"
               asp-controller="Home"
               asp-action="Index">
                📝 MiniBlog
            </a>

            <!-- Mobile toggle -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar content -->
            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- LEFT MENU -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home"
                           asp-action="Index">
                            Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="BlogPosts"
                           asp-action="Index">
                            Blog
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-danger"
                               asp-controller="Admin"
                               asp-action="Dashboard">
                                Admin
                            </a>
                        </li>
                    }
                </ul>

                <!-- RIGHT MENU -->
                <div class="d-flex align-items-center gap-3">

                    <!-- Social Icons -->
                    <a href="https://instagram.com/yourusername" target="_blank" title="Instagram">
                        <i class="fab fa-instagram fa-lg text-danger"></i>
                    </a>

                    <a href="https://wa.me/2348012345678" target="_blank" title="WhatsApp">
                        <i class="fab fa-whatsapp fa-lg text-success"></i>
                    </a>

                    <a href="https://x.com/yourusername" target="_blank" title="X">
                        <i class="fab fa-x-twitter fa-lg text-dark"></i>
                    </a>

                    <a href="https://tiktok.com/yourusername" target="_blank" title="TikTok">
                        <i class="fab fa-tiktok fa-lg text-dark"></i>
                    </a>

                    <!-- ✅ LOGIN / LOGOUT (ONLY ONCE) -->
                    <partial name="_LoginPartial" />

                    <!-- Theme toggle -->
                    <button id="themeToggle"
                            class="btn btn-sm btn-outline-secondary"
                            type="button"
                            title="Toggle dark mode">
                        🌙
                    </button>
                </div>

            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="border-top mt-5 py-3 text-muted">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - MiniBlog
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Theme toggle script -->
    <script>
        const toggle = document.getElementById("themeToggle");
        const body = document.body;

        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            toggle.textContent = "☀️";
        }

        toggle?.addEventListener("click", () => {
            body.classList.toggle("dark-mode");

            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
                toggle.textContent = "☀️";
            } else {
                localStorage.setItem("theme", "light");
                toggle.textContent = "🌙";
            }
        });
    </script>
    @if (TempData["ShowAdPopup"] != null)
    {
        <div class="modal fade" id="adModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">🔥 Sponsored</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body text-center">
                        <img src="/images/ad-banner.jpg"
                             class="img-fluid mb-3"
                             alt="Ad">

                        <p class="fw-semibold">
                            Advertise your brand here 🚀
                        </p>

                        <a href="https://watchlocker.ng/product/casio-ae-1200whl-5avdf-mens-digital-classic-leather-multi-functional-watch/?utm_source=criteo&utm_medium=display&utm_campaign=web_traffic_similar&utm_id=233008&cto_pld=AdQJQwHzAABVwttqNhQv6A"
                           target="_blank"
                           class="btn btn-primary">
                            Learn More
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const adModal = new bootstrap.Modal(
                    document.getElementById('adModal')
                );
                adModal.show();
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
